<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true"
    android:scrollbars="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Top bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/closeButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:layout_alignParentStart="true"
                android:contentDescription="Close" />

            <TextView
                android:id="@+id/newPostTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Post"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:gravity="center"/>
        </RelativeLayout>

        <!-- Tab Selector -->
        <LinearLayout
            android:id="@+id/tabSelector"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/tab_selector_bg"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:padding="4dp">

            <TextView
                android:id="@+id/projectIdeaTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Project Idea"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="15sp"
                android:background="@drawable/tab_selected_bg"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/collabRequestTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Collaboration Request"
                android:textColor="#1A6980"
                android:background="@drawable/tab_unselected_bg"
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <EditText
            android:id="@+id/projectTitleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:hint="Project Title"
            android:padding="20dp"
            android:textColor="#1A6980"
            android:textColorHint="#1A6980"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/previewDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:hint="Short Preview Description (for swipeable cards)"
            android:padding="20dp"
            android:textColor="#1A6980"
            android:textColorHint="#1A6980"
            android:textSize="16sp"
            android:minLines="3"
            android:gravity="top|start"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/fullDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:hint="Full Detailed Description"
            android:padding="20dp"
            android:textColor="#1A6980"
            android:textColorHint="#1A6980"
            android:textSize="16sp"
            android:minLines="4"
            android:maxLines="4"
            android:gravity="top|start"
            android:layout_marginBottom="16dp"/>

        <!-- Tags Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Tag Input Row -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:padding="20dp">

                <EditText
                    android:id="@+id/projectTagsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:background="@android:color/transparent"
                    android:hint="Tags (e.g., AI, Web Dev, Design)"
                    android:textColor="#1A6980"
                    android:textColorHint="#1A6980"
                    android:textSize="16sp"
                    android:imeOptions="actionDone"
                    android:maxLines="1"/>

                <ImageView
                    android:id="@+id/addTagButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@android:drawable/ic_input_add"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Add tag"
                    android:tint="#1A6980"/>
            </RelativeLayout>

            <!-- Tags Container -->
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/tagsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:alignItems="flex_start" />
        </LinearLayout>

        <!-- Difficulty Level Field -->
        <RelativeLayout
            android:id="@+id/difficultyLevelContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/difficultyLevelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Difficulty Level"
                android:textColor="#1A6980"
                android:textSize="16sp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:id="@+id/difficultyArrows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/difficultyUpArrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_up"
                    android:layout_marginBottom="2dp"
                    android:contentDescription="Increase difficulty"/>

                <ImageView
                    android:id="@+id/difficultyDownArrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_down"
                    android:contentDescription="Decrease difficulty"/>
            </LinearLayout>
        </RelativeLayout>

        <!-- GitHub Link Field -->
        <EditText
            android:id="@+id/githubLinkEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:hint="GitHub Link (Optional)"
            android:padding="20dp"
            android:textColor="#1A6980"
            android:textColorHint="#1A6980"
            android:textSize="16sp"
            android:inputType="textUri"
            android:layout_marginBottom="45dp"/>

        <Button
            android:id="@+id/saveProjectButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:backgroundTint="#1A6980"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <ProgressBar
            android:id="@+id/loadingProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>