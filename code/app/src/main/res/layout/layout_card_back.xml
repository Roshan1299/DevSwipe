<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@android:color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:strokeColor="#33000000"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@android:color/white">

        <!-- Info Button (back side to flip again) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/infoButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_info"
                android:tint="#444"
                android:layout_alignParentStart="true"
                android:contentDescription="Flip Back" />
        </RelativeLayout>

        <!-- Project Details Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Project Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:paddingBottom="4dp" />

        <!-- Full Description -->
        <TextView
            android:id="@+id/fullDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This project helps students with grammar correction..."
            android:textSize="14sp"
            android:textColor="#444444"
            android:paddingBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Timeline:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:paddingBottom="4dp" />

        <!-- Timeline -->
        <TextView
            android:id="@+id/timeline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Timeline: 4â€“6 weeks"
            android:textSize="14sp"
            android:textColor="#555555"
            android:paddingBottom="8dp" />

        <!-- GitHub Link -->
        <TextView
            android:id="@+id/githubLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GitHub: https://github.com/project"
            android:autoLink="web"
            android:textColor="#1a0dab"
            android:textSize="14sp" />

        <!-- Skills Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skills Needed:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <!-- Skills Chips -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/projectTagsChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="false"
            app:chipSpacing="8dp"
            app:singleSelection="false" />

        <!-- Like / Dislike Buttons -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/dislikeButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_dislike_border"
                android:src="@drawable/ic_thumb_down"
                android:scaleType="centerInside"
                android:tint="#444444" />

            <View
                android:layout_width="32dp"
                android:layout_height="1dp" />

            <ImageButton
                android:id="@+id/likeButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_like_border"
                android:src="@drawable/ic_thumb_up"
                android:scaleType="centerInside"
                android:tint="#444444" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
