<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- Global Action to go to Login -->
    <action
        android:id="@+id/action_global_loginFragment"
        app:destination="@id/loginFragment"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true" />

    <!-- Login Fragment -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.first.projectswipe.presentation.ui.auth.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_ideasFragment"
            app:destination="@id/homeFragment" />
<!--        <action-->
<!--            android:id="@+id/action_loginFragment_to_resetPasswordFragment"-->
<!--            app:destination="@id/ResetPasswordFragment" />-->
        <action
            android:id="@+id/action_loginFragment_to_onboardingSkillsFragment"
            app:destination="@id/onboardingSkillsFragment" />
    </fragment>

    <!-- Reset Password -->
<!--    <fragment-->
<!--        android:id="@+id/ResetPasswordFragment"-->
<!--        android:name="com.first.projectswipe.presentation.ui.auth.ResetPasswordFragment"-->
<!--        tools:layout="@layout/fragment_reset_password">-->
<!--        <action-->
<!--            android:id="@+id/action_resetPasswordFragment_to_loginFragment"-->
<!--            app:destination="@id/loginFragment" />-->
<!--    </fragment>-->

    <!-- Register Fragment -->
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.first.projectswipe.presentation.ui.auth.RegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_ideasFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_registerFragment_to_onboardingSkillsFragment"
            app:destination="@id/onboardingSkillsFragment" />
    </fragment>

    <!-- Home Fragment (Ideas Feed) -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.first.projectswipe.presentation.ui.home.HomeFragment"
        android:label="Ideas"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_ideasFragment_to_createProjectIdeaFragment"
            app:destination="@id/createProjectIdeaFragment" />
    </fragment>

    <!-- Profile Fragment -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.first.projectswipe.presentation.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/action_profileFragment_to_createProjectIdeaFragment"
            app:destination="@id/createProjectIdeaFragment">
            <argument
                android:name="projectId"
                app:argType="string"
                android:defaultValue="" />
        </action>
    </fragment>

    <!-- Edit Profile -->
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.first.projectswipe.presentation.ui.profile.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_profile">
        <action
            android:id="@+id/action_editProfileFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

    <!-- Create Post -->
    <fragment
        android:id="@+id/createProjectIdeaFragment"
        android:name="com.first.projectswipe.presentation.ui.projects.CreateProjectIdeaFragment"
        android:label="Create Post"
        tools:layout="@layout/fragment_create_post">
        <action
            android:id="@+id/action_createProjectIdeaFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_createProjectIdeaFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <argument
            android:name="projectId"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

    <!-- Onboarding Skills Fragment -->
    <fragment
        android:id="@+id/onboardingSkillsFragment"
        android:name="com.first.projectswipe.presentation.ui.onboarding.OnboardingSkillsFragment"
        android:label="Skills Selection"
        tools:layout="@layout/fragment_onboarding_skills">
        <action
            android:id="@+id/action_onboardingSkillsFragment_to_onboardingInterestsFragment"
            app:destination="@id/onboardingInterestsFragment" />
    </fragment>

    <!-- Onboarding Interests Fragment -->
    <fragment
        android:id="@+id/onboardingInterestsFragment"
        android:name="com.first.projectswipe.presentation.ui.onboarding.OnboardingInterestsFragment"
        android:label="Interests Selection"
        tools:layout="@layout/fragment_onboarding_interests">
        <action
            android:id="@+id/action_onboardingInterestsFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Uncomment these only if you add these fragments later -->

    <!-- Collaborate -->
    <fragment
        android:id="@+id/collaborateFragment"
        android:name="com.first.projectswipe.presentation.ui.collaboration.SeekingCollaboratorsFragment"
        android:label="Collaborate"
        tools:layout="@layout/fragment_collaborate">
        <action
            android:id="@+id/action_collaborateFragment_to_createProjectIdeaFragment"
            app:destination="@id/createProjectIdeaFragment" />
    </fragment>

    <!-- Chat -->
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.first.projectswipe.presentation.ui.chat.ChatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat">
        <action
            android:id="@+id/action_chatFragment_to_createProjectIdeaFragment"
            app:destination="@id/createProjectIdeaFragment" />
        <action
            android:id="@+id/action_chatFragment_to_individualChatFragment"
            app:destination="@id/individualChatFragment" />
    </fragment>

    <!-- Individual Chat -->
    <fragment
        android:id="@+id/individualChatFragment"
        android:name="com.first.projectswipe.presentation.ui.chat.IndividualChatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_individual_chat">
        <argument
            android:name="conversationId"
            app:argType="string" />
        <action
            android:id="@+id/action_individualChatFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>

</navigation>
