<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- Login Fragment -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.first.projectswipe.auth.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <!-- Register Fragment -->
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.first.projectswipe.auth.RegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <!-- Home Fragment (Main Page with Tabs) -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.first.projectswipe.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_createProjectIdeaFragment"
            app:destination="@id/createProjectIdeaFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.first.projectswipe.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />

        <action
            android:id="@+id/action_profileFragment_to_createProjectIdeaFragment"
            app:destination="@id/createProjectIdeaFragment">
            <argument
                android:name="projectId"
                app:argType="string"
                android:defaultValue="" />
        </action>

    </fragment>

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.first.projectswipe.profile.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_profile">

        <action
            android:id="@+id/action_editProfileFragment_to_profileFragment"
            app:destination="@id/profileFragment" />


    </fragment>

    <!-- Create Project Idea Fragment -->
    <fragment
        android:id="@+id/createProjectIdeaFragment"
        android:name="com.first.projectswipe.projects.CreateProjectIdeaFragment"
        android:label="Create Project Idea"
        tools:layout="@layout/fragment_create_project_idea">
        <action
            android:id="@+id/action_createProjectIdeaFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="projectId"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

</navigation>
